{% extends 'emails/notification_base.html.twig' %}

{% block icon_emoji %}
    <div style="display: inline-block; width: 56px; height: 56px; border-radius: 50%; background-color: #f0fdf4; text-align: center; line-height: 56px; font-size: 28px;">
        &#9989;
    </div>
{% endblock %}

{% block heading %}Export finalizat{% endblock %}

{% block content %}
    <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="background-color: #f0fdf4; border: 1px solid #bbf7d0; border-radius: 6px; margin-bottom: 16px;">
        <tr>
            <td style="padding: 16px;">
                <p style="margin: 0; font-size: 14px; color: #166534;">{{ message }}</p>
            </td>
        </tr>
    </table>

    {% if data.filename is defined %}
    <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="border: 1px solid #e0e0e0; border-radius: 6px; overflow: hidden;">
        <tr>
            <td style="padding: 10px 16px; font-size: 14px; color: #666;">Fisier</td>
            <td style="padding: 10px 16px; font-size: 14px; color: #333; font-weight: 600; text-align: right;">{{ data.filename }}</td>
        </tr>
    </table>
    {% endif %}
{% endblock %}

{% block cta %}
    {% if data.downloadUrl is defined %}
    <tr>
        <td style="padding: 0 32px 24px 32px;" align="center">
            <a href="{{ data.downloadUrl }}" target="_blank"
               style="display: inline-block; background-color: #16a34a; color: #ffffff; font-size: 15px; font-weight: 600; text-decoration: none; padding: 12px 32px; border-radius: 6px;">
                Descarca exportul
            </a>
        </td>
    </tr>
    {% endif %}
{% endblock %}
