{% extends 'emails/notification_base.html.twig' %}

{% block icon_emoji %}
    <div style="display: inline-block; width: 56px; height: 56px; border-radius: 50%; background-color: #fffbeb; text-align: center; line-height: 56px; font-size: 28px;">
        &#9888;&#65039;
    </div>
{% endblock %}

{% block heading %}Token ANAF expira{% endblock %}

{% block content %}
    <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="background-color: #fffbeb; border: 1px solid #fde68a; border-radius: 6px; margin-bottom: 16px;">
        <tr>
            <td style="padding: 16px;">
                <p style="margin: 0; font-size: 14px; color: #92400e;">{{ message }}</p>
            </td>
        </tr>
    </table>

    <p style="margin: 0; font-size: 14px; color: #666;">
        Reautorizeaza token-ul ANAF pentru a continua sa trimiti facturi electronice fara intreruperi.
    </p>
{% endblock %}

{% block cta %}
    <tr>
        <td style="padding: 0 32px 24px 32px;" align="center">
            <a href="{{ frontendUrl }}/efactura" target="_blank"
               style="display: inline-block; background-color: #d97706; color: #ffffff; font-size: 15px; font-weight: 600; text-decoration: none; padding: 12px 32px; border-radius: 6px;">
                Gestioneaza token-uri
            </a>
        </td>
    </tr>
{% endblock %}
