{% extends 'emails/notification_base.html.twig' %}

{% block icon_emoji %}
    <div style="display: inline-block; width: 56px; height: 56px; border-radius: 50%; background-color: #fffbeb; text-align: center; line-height: 56px; font-size: 28px;">
        &#9888;&#65039;
    </div>
{% endblock %}

{% block heading %}Factura scadenta in curand{% endblock %}

{% block content %}
    <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="background-color: #fffbeb; border: 1px solid #fde68a; border-radius: 6px; margin-bottom: 16px;">
        <tr>
            <td style="padding: 16px;">
                <p style="margin: 0; font-size: 14px; color: #92400e;">{{ message }}</p>
            </td>
        </tr>
    </table>

    <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="border: 1px solid #e0e0e0; border-radius: 6px; overflow: hidden;">
        <tr>
            <td style="padding: 10px 16px; font-size: 14px; color: #666;">Numar factura</td>
            <td style="padding: 10px 16px; font-size: 14px; color: #333; font-weight: 600; text-align: right;">{{ data.invoiceNumber|default('â€”') }}</td>
        </tr>
    </table>
{% endblock %}

{% block cta %}
    {% if data.invoiceId is defined and data.companyId is defined %}
    <tr>
        <td style="padding: 0 32px 24px 32px;" align="center">
            <a href="{{ frontendUrl }}/invoices/{{ data.invoiceId }}?company={{ data.companyId }}" target="_blank"
               style="display: inline-block; background-color: #d97706; color: #ffffff; font-size: 15px; font-weight: 600; text-decoration: none; padding: 12px 32px; border-radius: 6px;">
                Vizualizeaza factura
            </a>
        </td>
    </tr>
    {% endif %}
{% endblock %}
