{% extends 'emails/notification_base.html.twig' %}

{% block icon_emoji %}
    <div style="display: inline-block; width: 56px; height: 56px; border-radius: 50%; background-color: #eff6ff; text-align: center; line-height: 56px; font-size: 28px;">
        &#128228;
    </div>
{% endblock %}

{% block heading %}Documente noi e-Factura{% endblock %}

{% block content %}
    <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="background-color: #eff6ff; border: 1px solid #bfdbfe; border-radius: 6px; margin-bottom: 16px;">
        <tr>
            <td style="padding: 16px;">
                <p style="margin: 0; font-size: 14px; color: #1e40af;">{{ message }}</p>
            </td>
        </tr>
    </table>

    {% if data.count is defined %}
    <table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="border: 1px solid #e0e0e0; border-radius: 6px; overflow: hidden;">
        <tr>
            <td style="padding: 10px 16px; font-size: 14px; color: #666;">Documente noi</td>
            <td style="padding: 10px 16px; font-size: 14px; color: #333; font-weight: 600; text-align: right;">{{ data.count }}</td>
        </tr>
    </table>
    {% endif %}
{% endblock %}

{% block cta %}
    {% if data.companyId is defined %}
    <tr>
        <td style="padding: 0 32px 24px 32px;" align="center">
            <a href="{{ frontendUrl }}/invoices?company={{ data.companyId }}&direction=received" target="_blank"
               style="display: inline-block; background-color: #2563eb; color: #ffffff; font-size: 15px; font-weight: 600; text-decoration: none; padding: 12px 32px; border-radius: 6px;">
                Vezi documentele
            </a>
        </td>
    </tr>
    {% endif %}
{% endblock %}
