{% extends 'documents/pdf/_base.html.twig' %}

{% block styles %}
.watermark {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(-45deg);
    font-size: 90px;
    color: rgba(0,0,0,0.04);
    font-weight: bold;
    z-index: -1;
    letter-spacing: 8px;
}
.header-bar {
    background: {{ primaryColor|default('#2563eb') }};
    color: #fff;
    border-radius: 8px;
    padding: 20px 24px;
    overflow: hidden;
    margin-bottom: 28px;
}
.header-bar-left { float: left; }
.header-bar-right { float: right; text-align: right; }
.doc-title {
    font-size: 20px;
    font-weight: bold;
    letter-spacing: 1px;
    margin-bottom: 4px;
}
.doc-number {
    font-size: 13px;
    color: rgba(255,255,255,0.85);
}
.doc-meta {
    font-size: 12px;
    color: rgba(255,255,255,0.9);
    line-height: 1.8;
}
.doc-type {
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: rgba(255,255,255,0.75);
    margin-bottom: 4px;
}
.party-label {
    font-size: 9px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: {{ primaryColor|default('#2563eb') }};
    margin-bottom: 6px;
    font-weight: bold;
}
.party-name {
    font-size: 13px;
    font-weight: bold;
    margin-bottom: 4px;
    color: #1e293b;
}
.party-detail {
    font-size: 10px;
    color: #64748b;
    line-height: 1.6;
}
table.lines {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
}
table.lines thead th {
    background: {{ primaryColor|default('#2563eb') }};
    color: #fff;
    padding: 10px 12px;
    text-align: left;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
}
table.lines tbody td {
    padding: 9px 12px;
    border-bottom: 1px solid #f1f5f9;
    font-size: 11px;
    color: #374151;
}
table.lines tbody tr:nth-child(even) td {
    background: #f8fafc;
}
table.lines tbody tr:last-child td {
    border-bottom: none;
}
.totals {
    width: 300px;
    margin-left: auto;
    background: #f8fafc;
    border-radius: 8px;
    padding: 16px 20px;
}
.totals-row {
    overflow: hidden;
    padding: 5px 0;
    font-size: 11px;
    color: #4b5563;
}
.totals-row span:first-child { float: left; }
.totals-row span:last-child { float: right; }
.totals-row.total {
    font-size: 14px;
    font-weight: bold;
    border-top: 2px solid {{ primaryColor|default('#2563eb') }};
    padding-top: 10px;
    margin-top: 6px;
    color: {{ primaryColor|default('#2563eb') }};
}
.bank-info {
    background: #f8fafc;
    border-radius: 8px;
    padding: 10px 16px;
    font-size: 10px;
    color: #64748b;
    margin-bottom: 16px;
}
.bank-info .label {
    color: {{ primaryColor|default('#2563eb') }};
    font-weight: 600;
}
.validity {
    margin-top: 16px;
    padding: 12px 16px;
    background: #eff6ff;
    border: 1px solid #bfdbfe;
    border-radius: 8px;
    font-size: 10px;
    color: #1d4ed8;
}
.notes {
    margin-top: 16px;
    padding: 14px 16px;
    background: #f8fafc;
    border-radius: 8px;
    font-size: 10px;
    color: #555;
}
.notes-title {
    font-weight: bold;
    margin-bottom: 5px;
    color: #374151;
}
.footer {
    margin-top: 36px;
    padding-top: 12px;
    border-top: 1px solid #e2e8f0;
    font-size: 9px;
    color: #9ca3af;
    text-align: center;
}
{% endblock %}

{% block content %}
    <div class="watermark">{{ 'proforma_watermark'|trans({}, 'pdf', locale|default('ro')) }}</div>

    <div class="header-bar">
        <div class="header-bar-left">
            {% if (showLogo is not defined or showLogo) and logoDataUri %}
                <div class="header-logo"><img src="{{ logoDataUri }}" alt="Logo"></div>
            {% endif %}
            <div class="doc-title">{{ pdf_label('proforma_title', labelOverrides|default(null), locale|default('ro')) }}</div>
            <div class="doc-number">{{ invoice.number }}</div>
        </div>
        <div class="header-bar-right">
            <div class="doc-type">{{ 'proforma_watermark'|trans({}, 'pdf', locale|default('ro')) }}</div>
            <div class="doc-meta">{{ pdf_label('date_label', labelOverrides|default(null), locale|default('ro')) }}: {{ invoice.issueDate|date('d.m.Y') }}</div>
            {% if invoice.dueDate %}
                <div class="doc-meta">{{ 'valid_until'|trans({}, 'pdf', locale|default('ro')) }}: {{ invoice.dueDate|date('d.m.Y') }}</div>
            {% endif %}
        </div>
    </div>

    {% include 'documents/pdf/_parties.html.twig' %}

    {% include 'documents/pdf/_lines_table.html.twig' with {hasProductCodes: hasProductCodes|default(false), hasLineDiscounts: hasLineDiscounts|default(false)} %}

    {% include 'documents/pdf/_totals.html.twig' %}

    {% include 'documents/pdf/_bank_info.html.twig' %}

    {% include 'documents/pdf/_details.html.twig' %}

    <div class="validity">
        {% if invoice.dueDate %}
            {% set validityText = 'proforma_validity_until'|trans({}, 'pdf', locale|default('ro'))|replace({'%date%': invoice.dueDate|date('d.m.Y')}) %}
        {% else %}
            {% set validityText = 'proforma_validity_default'|trans({}, 'pdf', locale|default('ro')) %}
        {% endif %}
        {{ 'proforma_disclaimer'|trans({}, 'pdf', locale|default('ro'))|replace({'%validity%': validityText}) }}
    </div>

    {% include 'documents/pdf/_notes.html.twig' %}

    {% include 'documents/pdf/_footer.html.twig' %}
{% endblock %}
