{% set effectiveNotes = (invoice.notes is defined and invoice.notes) ? invoice.notes : ((config is defined and config.defaultNotes) ? config.defaultNotes : null) %}
{% set effectivePaymentTerms = (invoice.paymentTerms is defined and invoice.paymentTerms) ? invoice.paymentTerms : ((config is defined and config.defaultPaymentTerms) ? config.defaultPaymentTerms : null) %}

{% if effectiveNotes %}
<div class="notes">
    <div class="notes-title">{{ (notesLabel|default('notes'))|trans({}, 'pdf', locale|default('ro')) }}:</div>
    {{ effectiveNotes }}
</div>
{% endif %}

{% if effectivePaymentTerms %}
<div class="notes">
    <div class="notes-title">{{ 'payment_terms'|trans({}, 'pdf', locale|default('ro')) }}:</div>
    {{ effectivePaymentTerms }}
</div>
{% endif %}
