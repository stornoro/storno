{% extends 'documents/pdf/_base.html.twig' %}

{% block styles %}
body { font-size: 10px; color: #1a1a1a; }
.page { padding: 24px 32px; }

.header { overflow: hidden; margin-bottom: 20px; padding-bottom: 12px; border-bottom: 1px solid #e5e7eb; }
.header-left { float: left; }
.header-right { float: right; text-align: right; }
.doc-title { font-size: 20px; font-weight: bold; color: {{ primaryColor|default('#2563eb') }}; margin-bottom: 3px; letter-spacing: 0.5px; }
.doc-number { font-size: 11px; color: #555; margin-bottom: 2px; }
.doc-meta { font-size: 10px; color: #777; }
.doc-type { font-size: 9px; color: #aaa; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 4px; }

.parties { overflow: hidden; margin-bottom: 18px; padding-bottom: 12px; border-bottom: 1px solid #e5e7eb; }
.party { width: 48%; }
.party-label { font-size: 9px; text-transform: uppercase; letter-spacing: 1px; color: #aaa; margin-bottom: 4px; font-weight: bold; }
.party-name { font-size: 12px; font-weight: bold; margin-bottom: 2px; color: #111; }
.party-detail { font-size: 9px; color: #666; line-height: 1.6; }

table.lines { width: 100%; border-collapse: collapse; margin-bottom: 16px; }
table.lines thead th { border-bottom: 1px solid #1a1a1a; padding: 5px 8px; text-align: left; font-size: 9px; text-transform: uppercase; color: #555; font-weight: 600; letter-spacing: 0.5px; background: none; }
table.lines tbody td { padding: 5px 8px; border-bottom: 1px solid #e5e7eb; font-size: 10px; color: #1a1a1a; }
table.lines tbody tr:last-child td { border-bottom: 1px solid #9ca3af; }

.totals { margin-left: auto; width: 260px; margin-bottom: 16px; }
.totals-row { overflow: hidden; padding: 3px 0; font-size: 10px; color: #444; }
.totals-row span:first-child { float: left; }
.totals-row span:last-child { float: right; }
.totals-row.total { font-size: 12px; font-weight: bold; border-top: 1px solid {{ primaryColor|default('#2563eb') }}; padding-top: 6px; margin-top: 4px; color: {{ primaryColor|default('#2563eb') }}; }

.bank-info { margin-top: 14px; font-size: 9px; color: #555; }
.bank-info .label { color: #aaa; }

.notes { margin-top: 14px; padding: 8px 10px; border: 1px solid #e5e7eb; font-size: 9px; color: #555; }
.notes-title { font-weight: bold; margin-bottom: 3px; color: #333; }

.footer { margin-top: 28px; padding-top: 10px; border-top: 1px solid #e5e7eb; font-size: 8px; color: #aaa; text-align: center; }
.header-meta { border-collapse: collapse; margin-top: 2px; }
.header-meta td { padding: 1px 0; font-size: 10px; }
.header-meta .meta-label { text-align: right; padding-right: 8px; color: #777; white-space: nowrap; }
.header-meta .meta-value { text-align: right; font-weight: bold; white-space: nowrap; }
.header-meta .meta-spacer { width: 20px; }
{% endblock %}

{% block content %}
    <div class="header">
        <div class="header-left">
            {% if (showLogo is not defined or showLogo) and logoDataUri %}
                <div class="header-logo"><img src="{{ logoDataUri }}" alt="Logo"></div>
            {% endif %}
            <div class="doc-title">{{ 'invoice_title'|trans({}, 'pdf', locale|default('ro')) }}</div>
            <div class="doc-number">{{ invoice.number }}</div>
        </div>
        <div class="header-right">
            <div class="doc-type">{{ invoice.documentType.value|upper }}</div>
            <table class="header-meta">
                <tr>
                    <td class="meta-label">{{ 'date_label'|trans({}, 'pdf', locale|default('ro')) }}:</td>
                    <td class="meta-value">{{ invoice.issueDate|date('d.m.Y') }}</td>
                    {% if invoice.anafUploadId|default %}
                    <td class="meta-spacer"></td>
                    <td class="meta-label">{{ 'anaf_upload_index'|trans({}, 'pdf', locale|default('ro')) }}:</td>
                    <td class="meta-value">{{ invoice.anafUploadId }}</td>
                    {% endif %}
                </tr>
                {% if invoice.dueDate %}
                <tr>
                    <td class="meta-label">{{ 'due_date'|trans({}, 'pdf', locale|default('ro')) }}:</td>
                    <td class="meta-value">{{ invoice.dueDate|date('d.m.Y') }}</td>
                    {% if invoice.anafUploadId|default and invoice.syncedAt|default %}
                    <td class="meta-spacer"></td>
                    <td class="meta-label">{{ 'anaf_upload_date'|trans({}, 'pdf', locale|default('ro')) }}:</td>
                    <td class="meta-value">{{ invoice.syncedAt|date('d.m.Y H:i') }}</td>
                    {% endif %}
                </tr>
                {% endif %}
            </table>
        </div>
    </div>

    {% include 'documents/pdf/_parties.html.twig' %}

    {% include 'documents/pdf/_lines_table.html.twig' with {hasProductCodes: hasProductCodes|default(false), hasLineDiscounts: hasLineDiscounts|default(false)} %}

    {% include 'documents/pdf/_totals.html.twig' %}

    {% include 'documents/pdf/_bank_info.html.twig' %}

    {% include 'documents/pdf/_details.html.twig' %}

    {% include 'documents/pdf/_notes.html.twig' %}

    {% include 'documents/pdf/_footer.html.twig' %}
{% endblock %}
