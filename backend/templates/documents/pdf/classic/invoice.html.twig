{% extends 'documents/pdf/_base.html.twig' %}

{% block styles %}
.header { overflow: hidden; margin-bottom: 30px; border-bottom: 2px solid {{ primaryColor|default('#2563eb') }}; padding-bottom: 15px; }
.header-left { float: left; }
.header-right { float: right; text-align: right; }
.doc-title { font-size: 24px; font-weight: bold; color: {{ primaryColor|default('#2563eb') }}; margin-bottom: 5px; }
.doc-number { font-size: 14px; color: #666; }
.doc-type { font-size: 11px; color: #999; text-transform: uppercase; letter-spacing: 1px; }
.parties { overflow: hidden; margin-bottom: 25px; }
.party { width: 48%; }
.party-label { font-size: 10px; text-transform: uppercase; letter-spacing: 1px; color: #999; margin-bottom: 5px; font-weight: bold; }
.party-name { font-size: 14px; font-weight: bold; margin-bottom: 3px; }
.party-detail { font-size: 10px; color: #555; }
table.lines { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
table.lines thead th { background: #f8fafc; border-bottom: 2px solid #e2e8f0; padding: 8px 10px; text-align: left; font-size: 10px; text-transform: uppercase; color: #64748b; font-weight: 600; }
table.lines tbody td { padding: 8px 10px; border-bottom: 1px solid #f1f5f9; font-size: 11px; }
table.lines tbody tr:last-child td { border-bottom: 2px solid #e2e8f0; }
.totals { margin-left: auto; width: 280px; }
.totals-row { overflow: hidden; padding: 4px 0; font-size: 11px; }
.totals-row span:first-child { float: left; }
.totals-row span:last-child { float: right; }
.totals-row.total { font-size: 14px; font-weight: bold; border-top: 2px solid {{ primaryColor|default('#2563eb') }}; padding-top: 8px; margin-top: 5px; color: {{ primaryColor|default('#2563eb') }}; }
.bank-info { margin-top: 20px; font-size: 10px; }
.bank-info .label { color: #999; }
.notes { margin-top: 30px; padding: 15px; background: #f8fafc; border-radius: 4px; font-size: 10px; color: #555; }
.notes-title { font-weight: bold; margin-bottom: 5px; }
.footer { margin-top: 40px; padding-top: 15px; border-top: 1px solid #e2e8f0; font-size: 9px; color: #999; text-align: center; }
.header-meta { border-collapse: collapse; margin-top: 4px; }
.header-meta td { padding: 2px 0; font-size: 11px; }
.header-meta .meta-label { text-align: right; padding-right: 10px; color: #666; white-space: nowrap; }
.header-meta .meta-value { text-align: right; font-weight: bold; white-space: nowrap; }
.header-meta .meta-spacer { width: 25px; }
{% endblock %}

{% block content %}
    <div class="header">
        <div class="header-left">
            {% if (showLogo is not defined or showLogo) and logoDataUri %}
                <div class="header-logo"><img src="{{ logoDataUri }}" alt="Logo"></div>
            {% endif %}
            <div class="doc-title">{{ 'invoice_title'|trans({}, 'pdf', locale|default('ro')) }}</div>
            <div class="doc-number">{{ invoice.number }}</div>
        </div>
        <div class="header-right">
            <div class="doc-type">{{ invoice.documentType.value|upper }}</div>
            <table class="header-meta">
                <tr>
                    <td class="meta-label">{{ 'date_label'|trans({}, 'pdf', locale|default('ro')) }}:</td>
                    <td class="meta-value">{{ invoice.issueDate|date('d.m.Y') }}</td>
                    {% if invoice.anafUploadId|default %}
                    <td class="meta-spacer"></td>
                    <td class="meta-label">{{ 'anaf_upload_index'|trans({}, 'pdf', locale|default('ro')) }}:</td>
                    <td class="meta-value">{{ invoice.anafUploadId }}</td>
                    {% endif %}
                </tr>
                {% if invoice.dueDate %}
                <tr>
                    <td class="meta-label">{{ 'due_date'|trans({}, 'pdf', locale|default('ro')) }}:</td>
                    <td class="meta-value">{{ invoice.dueDate|date('d.m.Y') }}</td>
                    {% if invoice.anafUploadId|default and invoice.syncedAt|default %}
                    <td class="meta-spacer"></td>
                    <td class="meta-label">{{ 'anaf_upload_date'|trans({}, 'pdf', locale|default('ro')) }}:</td>
                    <td class="meta-value">{{ invoice.syncedAt|date('d.m.Y H:i') }}</td>
                    {% endif %}
                </tr>
                {% endif %}
            </table>
        </div>
    </div>

    {% include 'documents/pdf/_parties.html.twig' %}

    {% include 'documents/pdf/_lines_table.html.twig' with {hasProductCodes: hasProductCodes|default(false), hasLineDiscounts: hasLineDiscounts|default(false)} %}

    {% include 'documents/pdf/_totals.html.twig' %}

    {% include 'documents/pdf/_bank_info.html.twig' %}

    {% include 'documents/pdf/_details.html.twig' %}

    {% include 'documents/pdf/_notes.html.twig' %}

    {% include 'documents/pdf/_footer.html.twig' %}
{% endblock %}
